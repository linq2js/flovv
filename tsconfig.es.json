{
  "extends": "./tsconfig.json",
  "exclude": ["node_modules/*", "**/*.test.*", "**/testUtils.*"],
  "compilerOptions": {
    "outDir": "./es",
    "module": "ES6",
    "moduleResolution": "Node",
    "target": "ES2017",
    "skipLibCheck": true,
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true
  }
}
